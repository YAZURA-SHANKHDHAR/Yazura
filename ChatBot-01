    <h1> Hello! My Name is Tex</h1>
    <input type="text" placeholder="Talk to Me" class="Chatbot" id="getinput" onfocus="this.value=''" onkeypress="search()">    
<script type="text/javascript">
    function search() {
        var get=document.getElementById("getinput").value;
        var tex=get.toLowerCase();
        if (tex=="hello"){
            alert("Hey! How are You??");
        }
        else if (tex=="hello!"){
            alert("Hey! How are You??");
        }
        else if( tex=="how are you?"){
            alert("I'm fine, thanks for asking");
        }
        else if(tex=="what‚Äôs up?"){
            alert("I'm good, how are you?");
        }
        else if(tex=="are you a robot?"){
            alert("Yes I‚Äôm a robot but I‚Äôm a smart one!");
        }
        else if(tex=="today is my birthday!"){
            alert("HAPPY BIRTHDAY!! :)");
        }
        else if(tex=="thank you"){
            alert("Pleasure is all mine");
        }
        else if(tex=="what is your name?"){
            alert("My name is TEX and I'm your friendly chatbot");
        }
        else if(tex=="where do you live?"){
            alert("On the INTERNET");
        }
        else if(tex=="who made you?"){
            alert("A software enthusiast made me");
        }
        else if(tex=="which languages can you speak?"){
            alert("I only converse in ENGLISH");
        }
        else if(tex=="do you have a hobby"){
            alert("My only hobby is to talk to new people :))");
        }
        else if(tex=="bye"){
            alert("Bye!! See you around üñê")
        }
    }
 </script>
